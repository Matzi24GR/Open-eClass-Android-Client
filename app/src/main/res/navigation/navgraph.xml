<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navgraph"
    app:startDestination="@id/courseListFragment">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.openeclassclient.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />

    <fragment
        android:id="@+id/announcementFragment"
        android:name="com.example.openeclassclient.AnnouncementFragment"
        tools:layout="@layout/fragment_announcement" />
    <fragment
        android:id="@+id/courseListFragment"
        android:name="com.example.openeclassclient.CourseListFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_course_list" />
    <fragment
        android:id="@+id/calendarFragment"
        android:name="com.example.openeclassclient.CalendarFragment"
        tools:layout="@layout/fragment_calendar" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.openeclassclient.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_MainActivity"
            app:destination="@id/mainActivity"
            app:popUpTo="@id/navgraph"
            app:popUpToInclusive="true"
            app:exitAnim="@anim/slidedown" />
    </fragment>
    <action
        android:id="@+id/tologinFragment"
        app:destination="@id/loginFragment"
        app:popUpTo="@+id/navgraph"
        app:popUpToInclusive="true"/>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.openeclassclient.AboutFragment"
        android:label="About"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.openeclassclient.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
</navigation>
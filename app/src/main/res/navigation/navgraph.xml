<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navgraph"
    app:startDestination="@id/homeFragment">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.geomat.openeclassclient.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />

    <fragment
        android:id="@+id/announcementFragment"
        android:name="com.geomat.openeclassclient.screens.Announcements.AnnouncementFragment"
        tools:layout="@layout/fragment_announcement" />
    <fragment
        android:id="@+id/courseListFragment"
        android:name="com.geomat.openeclassclient.screens.Courses.CourseListFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_course_list" />
    <fragment
        android:id="@+id/calendarFragment"
        android:name="com.geomat.openeclassclient.screens.Calendar.CalendarFragment"
        tools:layout="@layout/fragment_calendar" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.geomat.openeclassclient.screens.Login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_MainActivity"
            app:destination="@id/mainActivity"
            app:exitAnim="@anim/slidedown"
            app:popUpTo="@id/navgraph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_webViewFragment"
            app:destination="@id/ExternalAuthFragment" />
    </fragment>
    <action
        android:id="@+id/tologinFragment"
        app:destination="@id/loginFragment"
        app:popUpTo="@id/navgraph"
        app:popUpToInclusive="true" />
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.geomat.openeclassclient.screens.AboutFragment"
        android:label="About"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.geomat.openeclassclient.screens.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/ExternalAuthFragment"
        android:name="com.geomat.openeclassclient.screens.Login.ExternalAuthFragment"
        android:label="fragment_external_auth"
        tools:layout="@layout/fragment_external_auth">
        <argument
            android:name="url"
            app:argType="string" />
        <action
            android:id="@+id/action_webViewFragment_to_mainActivity"
            app:destination="@id/mainActivity"
            app:popUpTo="@id/navgraph"
            app:popUpToInclusive="true" />
        <argument
            android:name="serverName"
            app:argType="string" />
        <argument
            android:name="authName"
            app:argType="string" />
    </fragment>
</navigation>